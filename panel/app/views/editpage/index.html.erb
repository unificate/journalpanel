<div class="container">
  <h1 class="service-title">Changes</h1>
    <div class="changesTable">
        <% unless @changes.nil? %>
            <table class="table table-hover">
                <thead class="thead-light">
                    <tr>
                        <th scope="col">
                            Change Id
                        </th>
                        <th scope="col">
                            Row Entry Id
                        </th>
                        <th scope="col">
                            Old Value
                        </th>
                        <th scope="col">
                            New Value
                        </th>
                        <th scope="col">
                            Created At
                        </th>
                        <th scope="col">
                            User Id
                        </th>
                    </tr>
                </thead>
                <tbody>
                <% @changes.each do |change| %>
                    <tr>
                        <td><%= change.id %></td>
                        <td><%= change.Row_Entry_id %></td>
                        <td><%= stringToJSON(change.old_value)["name"] %></td>
                        <td><%= stringToJSON(change.new_value)["name"] %></td>
                        <td><%= change.created_at %></td>
                        <td><%= change.Users_id %></td>
                    </tr>
                <% end %>
                </tbody>
            </table>
        <% end %>
    </div>
</div>


