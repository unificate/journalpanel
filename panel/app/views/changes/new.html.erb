<div class="container">
    <h1 class="service-title">New Change Request</h1>
    <%= form_with :url => url_for(:controller => "changes", :action => "create"), :local => true do |form| %>
    <%@data.each do |key, value| %>
        <% unless key.in? ["id", "created_at", "updated_at"] %>
            <%= render "field_tile",name:key,value:value,form:form, html:{method:"post"}%>
        <% end %>
    <%end%>
    <%= form.hidden_field :mid, value:@mid, class:"form-control" %>
    <%= form.hidden_field :tid, value:@tid, class:"form-control" %>
    <%= form.hidden_field :rid, value:@rid, class:"form-control" %>
    <%= form.submit "Submit", type: "submit", class:"btn btn-primary hp-blue"%>
    <%= link_to "Cancel", :back, class: "btn btn-secondary" %>
    <%end%>
</div>
