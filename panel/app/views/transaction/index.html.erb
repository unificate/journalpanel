<h1 class="service-title">Recent Transactions</h1>
<div class="title-container text-center">
  <div class="container">
    <table class="table table-hover">
      <thead class="thead-light">
        <tr>
      	  <th scope="col">Transaction Number</th>
          <th scope="col">User</th>
      	  <th scope="col">Change Ids</th>
      	  <th scope="col"></th>
      	  <th scope="col"></th>
      	  <th scope="col"></th>
      	</tr>
      </thead>
      <tbody>
	    <%counter = 0%>
          <%if @list!=nil %>
            <%@list.zip(@users).each do |displayTransactionId, user|%>
	            <tr>
          		  <td><%=displayTransactionId.id%></td>
                <td><%=user%></td>
          		  <td><%@result.each do |display|%> <%if display.transaction_id == displayTransactionId.id%> <%=display.change_id%> <%end%> <%counter = counter + 1%> <%end%> </td>
          		  <td>
			            <%= button_to "View",
                                "/transaction/show",
                                method: :get,
                                class: "btn btn-primary btn-sm",
                                params: {id: displayTransactionId} %>
		            </td>
		            <td>
		              <%= button_to "Submit",
                                "/transaction/submit",
                                method: :get,
                                class: "btn btn-primary btn-sm",
                                params: {id: displayTransactionId} %>
	              </td>
	              <td>
                  <%= button_to "Delete",
                                "/transaction/delete",
                                method: :get,
                                class: "btn btn-primary btn-sm",
                                params: {id: displayTransactionId} %>
                </td>
              </tr>
	          <%end%>
          <%end%>
      </tbody>
    </table>
  </div>
</div>
