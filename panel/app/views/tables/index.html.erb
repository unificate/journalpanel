<% microserviceTitle = []%>
<% @microservice.name.split(/\s|'|,|_/).each {|n| microserviceTitle.push(n.capitalize())} %>
<h1 class="service-title"><%= microserviceTitle.join(" ") %></h1>

<div class="tile-container">
    <div class="container">
      <div class="row justify-content-center">
        <% puts @table_names %>
        <% if @table_names == nil%>
          <h4>The Microservice appears to be offline</h4>
        <% else %>
          <% @table_names.each do |n|%>
            <div class="col-sm-3 mb-4">
              <%= render "service_table_tile", name:n, table:@schema[n], id:@microservice.id.to_s%>
            </div>
          <% end %>
        <%end%>
      </div>
    </div>
</div>

