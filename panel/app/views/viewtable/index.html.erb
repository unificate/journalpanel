<h1 class="service-title"><%= @tname %></h1>
<% unless @records[0].nil? %>
    <table class="table table-hover">
        <thead class="thead-light">
            <tr>
            <% @records[0].keys.each do |key| %>
                <th scope="col"><%= key %></th>
            <% end %>
            </tr>
        </thead>
        <tbody>
        <% @records.each do |tuple| %>
            <tr>
            <% tuple.keys.each do |attr| %>
                <td><%= tuple[attr] %></td>
            <% end %>
            </tr>
        <% end %>
        </tbody>
    </table>
<% end %>
